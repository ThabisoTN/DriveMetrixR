@using ProductAuthenticatorApp.Data
@model List<Lease>

@{
    ViewData["Title"] = "Branch Leases";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No leases found for your branch.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Lease ID</th>
                        <th>Vehicle</th>
                        <th>Client</th>
                        <th>Driver</th>
                        <th>Start Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lease in Model)
                    {
                        <tr>
                            <td>@lease.LeaseId</td>
                            <td>
                                @lease.Vehicle?.Make @lease.Vehicle?.Model (@lease.Vehicle?.Year)
                                <br><small class="text-muted">VIN: @lease.Vehicle?.VIN</small>
                            </td>
                            <td>
                                <strong>@lease.Client?.CompanyName</strong>
                                <br><small>@lease.Client?.ApplicationUser?.Email</small>
                                <br><small>@lease.Client?.Address</small>
                            </td>
                            <td>
                                @lease.Driver?.Name
                                <br><small>License: @lease.Driver?.LicenseNumber</small>
                                <br><small>Phone: @lease.Driver?.Phone</small>
                            </td>
                            <td>@lease.StartDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(lease.LeaseStatus)">
                                    @lease.LeaseStatus
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="LeaseDetails" asp-route-id="@lease.LeaseId"
                                       class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Details
                                    </a>

                                    @if (lease.LeaseStatus == "RequestSent")
                                    {
                                        <form asp-action="ApproveLease" method="post" class="d-inline">
                                            <input type="hidden" name="leaseId" value="@lease.LeaseId" />
                                            <button type="submit" class="btn btn-sm btn-success ml-1">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Completed" => "bg-secondary",
            _ => "bg-warning text-dark" // Default for RequestSent etc.
        };
    }
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .badge {
            font-size: 0.9em;
            padding: 5px 10px;
            border-radius: 4px;
        }

        .table td, .table th {
            vertical-align: middle;
        }
    </style>
}