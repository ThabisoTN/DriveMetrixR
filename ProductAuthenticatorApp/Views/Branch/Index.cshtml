@{
    ViewData["Title"] = "Branch Manager Dashboard";
    Layout = "_Layout"; // Ensure this matches your layout file name
}

<!-- Main Content -->
<div class="container mt-4">
    <!-- Header Section -->
    <div class="text-center mb-4">
        <h2 class="display-5">Branch Manager Dashboard</h2>
        <p class="text-muted">Manage your branch operations</p>
    </div>

    <!-- Lease Management Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-4">
                    <div class="mb-3">
                        <i class="fas fa-file-contract fa-3x text-primary mb-3"></i>
                        <h3 class="h4">Lease Management</h3>
                        <p class="text-muted mb-4">View and manage all leases for your branch</p>
                        <a asp-action="ViewBranchLeases" class="btn btn-primary px-4 py-2">
                            <i class="fas fa-list me-2"></i>View All Leases
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
</div>

<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 0.5rem;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

    .btn {
        transition: all 0.2s ease;
    }

    .display-5 {
        font-size: 2rem;
        font-weight: 300;
        line-height: 1.2;
    }
</style>

@* Remove this if Font Awesome is already in your layout *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />