    <script>
        // Add active class to current nav item
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.main-nav a');

            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    navLinks.forEach(l => l.parentElement.classList.remove('active'));
                    this.parentElement.classList.add('active');
                });
            });

            // Simulate loading
            const addProductBtn = document.getElementById('addProductBtn');
            addProductBtn.addEventListener('click', function(e) {
                e.preventDefault();

                const originalText = addProductBtn.innerHTML;
                addProductBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                addProductBtn.disabled = true;

                setTimeout(() => {
                    addProductBtn.innerHTML = originalText;
                    addProductBtn.disabled = false;
                    // In a real app, this would redirect to the Add Product page
                    window.location.href = addProductBtn.href;
                }, 1500);
            });
        });
    </script>
