@model List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>

@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="mb-4">Add New Product</h1>

    <div class="card shadow" style="border-radius: 10px;">
        <div class="card-body">
            <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Product Name</label>
                            <input name="ProductName" class="form-control" style="border-radius: 5px;" required />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="ProductDescription" class="form-control" style="border-radius: 5px;" rows="3" required></textarea>
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Manufacturer</label>
                            <input name="Manufacturer" class="form-control" style="border-radius: 5px;" required />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Model Number</label>
                            <input name="ModelNumber" class="form-control" style="border-radius: 5px;" required />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Serial Number</label>
                            <input name="SerialNumber" type="number" class="form-control" style="border-radius: 5px;" required />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">MAC Address</label>
                            <input name="MACAddress" class="form-control" style="border-radius: 5px;" />
                            <span class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Category</label>
                            <select name="CategoryId" class="form-select" style="border-radius: 5px;" required>
                                <option value="">-- Select Category --</option>
                                @foreach (var category in Model)
                                {
                                    <option value="@category.Value">@category.Text</option>
                                }
                            </select>
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Color</label>
                            <input name="Color" class="form-control" style="border-radius: 5px;" />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Storage Capacity</label>
                            <input name="StorageCapacity" class="form-control" style="border-radius: 5px;" />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">RAM</label>
                            <input name="RAM" class="form-control" style="border-radius: 5px;" />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Processor Model</label>
                            <input name="ProcessorModel" class="form-control" style="border-radius: 5px;" />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Operating System</label>
                            <input name="OperatingSystem" class="form-control" style="border-radius: 5px;" />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Product Image</label>
                            <input type="file" name="imageFile" class="form-control" style="border-radius: 5px;" accept="image/*" required />
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Save Product
                            </button>
                            <a asp-action="ViewItems" asp-controller="User" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('form').submit(function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    $(this).addClass('was-validated');
                }
            });
        });
    </script>
}