@model IEnumerable<ProductAuthenticatorApp.Data.Lease>
@{
    ViewData["Title"] = "My Lease Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table th {
        white-space: nowrap;
        vertical-align: middle;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.35em 0.65em;
        min-width: 80px;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.03);
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Lease Requests</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't made any lease requests yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Lease Period</th>
                        <th>Vehicle</th>
                        <th>Driver</th>
                        <th>Status</th>
                        <th>Request Date</th>
                        <th>Monthly Rate</th>
                        @* <th>Actions</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.StartDate.ToShortDateString() - @(item.EndDate?.ToShortDateString() ?? "N/A")
                                <br>
                                <small class="text-muted">
                                    @((item.EndDate.HasValue ? (item.EndDate.Value - item.StartDate).Days : 0)) days
                                </small>
                            </td>
                            <td>
                                @if (item.Vehicle != null)
                                {
                                    <div>@item.Vehicle.Make @item.Vehicle.Model</div>
                                    <small class="text-muted">VIN: @item.Vehicle.VIN</small>
                                }
                            </td>
                            <td>
                                @if (item.Driver != null)
                                {
                                    <div>@item.Driver.Name</div>
                                    <small class="text-muted">License: @item.Driver.LicenseNumber</small>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.LeaseStatus))
                                {
                                    <span class="badge @GetStatusBadgeClass(item.LeaseStatus)">
                                        @item.LeaseStatus
                                    </span>
                                    <br>
                                   @*  <small class="text-muted">
                                        @(item.IsActive ? "Active" : "Inactive")
                                    </small> *@
                                }
                            </td>
                            <td>
                                @item.RequestDate.ToShortDateString()
                            </td>
                            <td>
                                @item.MonthlyRate.ToString("C")
                            </td>
                            @* <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.LeaseId" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.LeaseId" class="btn btn-outline-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.LeaseId" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Pending" => "bg-warning text-dark",
            "Rejected" => "bg-danger",
            "Cancelled" => "bg-secondary",
            _ => "bg-info text-dark"
        };
    }
}