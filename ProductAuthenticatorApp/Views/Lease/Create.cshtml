@model ProductAuthenticatorApp.Data.Lease

@{
    ViewData["Title"] = "Create Lease";
    var vehicleInfo = ViewBag.VehicleInfo as string ?? "N/A";
    var branchName = ViewBag.BranchName as string ?? "N/A";
    var monthlyRate = ViewBag.MonthlyRate != null ? ((decimal)ViewBag.MonthlyRate).ToString("C") : "N/A";
    var vehicleId = ViewBag.VehicleId ?? 0;
}

<div class="container mt-4">
    <h2 class="mb-4">Create Lease</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- Vehicle Info Section -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Vehicle Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Vehicle:</label>
                            <p>@vehicleInfo</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Branch:</label>
                            <p>@branchName</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Monthly Rate:</label>
                            <p>@monthlyRate</p>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="VehicleId" value="@vehicleId" />
            </div>
        </div>

        <!-- Lease Info Section -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Lease Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="StartDate">Start Date</label>
                            <input type="date" name="StartDate" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="EndDate">End Date</label>
                            <input type="date" name="EndDate" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Terms">Terms</label>
                    <textarea name="Terms" class="form-control" rows="3"></textarea>
                </div>
            </div>
        </div>

        <!-- Driver Info Section -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Driver Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Driver.Name">Full Name</label>
                            <input name="Driver.Name" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Driver.LicenseNumber">License Number</label>
                            <input name="Driver.LicenseNumber" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Driver.Email">Email</label>
                            <input name="Driver.Email" class="form-control" type="email" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Driver.Phone">Phone</label>
                            <input name="Driver.Phone" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Driver.Address">Address</label>
                    <textarea name="Driver.Address" class="form-control" rows="2" required></textarea>
                </div>

                <div class="form-group">
                    <label for="Driver.DateOfBirth">Date of Birth</label>
                    <input name="Driver.DateOfBirth" class="form-control" type="date" required />
                </div>
            </div>
        </div>

        <div class="form-group text-right">
            <button type="submit" class="btn btn-primary">Submit Lease Request</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
