<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DriveMatrixR Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --secondary: #f59e0b;
            --dark: #1e293b;
            --light: #f8fafc;
            --gray: #94a3b8;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background-color: var(--light);
            color: var(--dark);
        }

        .sidebar {
            background-color: var(--dark);
            color: white;
            height: 100vh;
            position: fixed;
            width: 250px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .main-content {
            margin-left: 250px;
            padding: 2rem;
            transition: all 0.3s ease;
        }

        .nav-link {
            color: rgba(255,255,255,.8);
            margin-bottom: 0.5rem;
            border-radius: 6px;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

            .nav-link:hover, .nav-link.active {
                color: white;
                background-color: rgba(255,255,255,.1);
                transform: translateX(5px);
            }

            .nav-link i {
                width: 24px;
                text-align: center;
                margin-right: 10px;
            }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            }

        .stat-card {
            color: white;
            padding: 1.5rem;
            border-radius: 12px;
            position: relative;
            overflow: hidden;
        }

            .stat-card i {
                font-size: 2.5rem;
                opacity: 0.2;
                position: absolute;
                right: 20px;
                top: 20px;
            }

            .stat-card .count {
                font-size: 2rem;
                font-weight: 700;
                margin-bottom: 0.5rem;
            }

            .stat-card .label {
                font-size: 0.9rem;
                opacity: 0.8;
            }

        .recent-activity {
            list-style: none;
            padding: 0;
        }

        .activity-item {
            padding: 1rem 0;
            border-bottom: 1px solid #e2e8f0;
        }

            .activity-item:last-child {
                border-bottom: none;
            }

        .activity-time {
            font-size: 0.8rem;
            color: var(--gray);
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: var(--gray);
        }

        .badge-lease {
            background-color: rgba(37, 99, 235, 0.1);
            color: var(--primary);
        }

        .badge-pending {
            background-color: rgba(245, 158, 11, 0.1);
            color: var(--secondary);
        }

        @@media (max-width: 768px) {
            .sidebar

        {
            width: 70px;
            overflow: hidden;
            padding: 1rem 0.5rem;
        }

        .sidebar h4, .nav-link span {
            display: none;
        }

        .nav-link {
            text-align: center;
            padding: 0.75rem 0;
        }

            .nav-link i {
                margin-right: 0;
                font-size: 1.25rem;
            }

        .main-content {
            margin-left: 70px;
        }

        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="mb-4 d-flex align-items-center">
            <i class="fas fa-car me-2"></i>
            <span>DriveMatrixR</span>
        </h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="#">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewSuppliers", "Admin")">
                    <i class="fas fa-truck"></i>
                    <span>Suppliers</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewBranches", "Admin")">
                    <i class="fas fa-building"></i>
                    <span>Branches</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewVehicles", "Admin")">
                    <i class="fas fa-car"></i>
                    <span>Vehicles</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewClients", "Admin")">
                    <i class="fas fa-users"></i>
                    <span>Clients</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewLeases", "Admin")">
                    <i class="fas fa-file-contract"></i>
                    <span>Leases</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewReports", "Admin")">
                    <i class="fas fa-chart-bar"></i>
                    <span>Reports</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewApplicationUsers", "Admin")">
                    <i class="fas fa-chart-bar"></i>
                    <span>View Users</span>
                </a>
            </li>
        </ul>
        <div class="mt-auto pt-3">
            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-light btn-sm w-100">
                <i class="fas fa-sign-out-alt me-1"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Dashboard Overview</h2>
            <div class="text-muted">
                <i class="fas fa-calendar-alt me-2"></i>
                <span id="current-date"></span>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stat-card" style="background-color: var(--primary);">
                    <div class="count">142</div>
                    <div class="label">Total Vehicles</div>
                    <i class="fas fa-car"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card" style="background-color: #10b981;">
                    <div class="count">87</div>
                    <div class="label">Active Leases</div>
                    <i class="fas fa-file-contract"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card" style="background-color: var(--secondary);">
                    <div class="count">24</div>
                    <div class="label">Pending Approvals</div>
                    <i class="fas fa-clock"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card" style="background-color: #ef4444;">
                    <div class="count">5</div>
                    <div class="label">Overdue Returns</div>
                    <i class="fas fa-exclamation-circle"></i>
                </div>
            </div>
        </div>

       
            

        

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Display current date
        const now = new Date();
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        document.getElementById('current-date').textContent = now.toLocaleDateString('en-US', options);

        // Simple sidebar toggle for mobile
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('.main-content');

            function toggleSidebar() {
                if (window.innerWidth < 768) {
                    sidebar.classList.add('collapsed');
                    mainContent.classList.add('collapsed');
                } else {
                    sidebar.classList.remove('collapsed');
                    mainContent.classList.remove('collapsed');
                }
            }

            window.addEventListener('resize', toggleSidebar);
            toggleSidebar();
        });
    </script>
</body>
</html>