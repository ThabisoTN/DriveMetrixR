@page
@model RegisterModel
@{
    ViewData["Title"] = "Join DriveMatrixR";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="~/css/Register.css" rel="stylesheet" />

<div class="register-container">
    <div class="register-header">
        <h1 class="register-title">@ViewData["Title"]</h1>
        <p class="register-subtitle">Create your account to access premium vehicle leasing</p>
    </div>

    <div class="register-form">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="John" />
                        <label asp-for="Input.FirstName">First Name</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" placeholder="Doe" />
                        <label asp-for="Input.LastName">Last Name</label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="business-toggle">
                <label class="toggle-switch">
                    <input type="checkbox" asp-for="Input.IsBusinessClient" id="isBusinessClient">
                    <span class="toggle-slider"></span>
                </label>
                <label for="isBusinessClient" style="font-weight: 500; color: var(--dark);">Register as Business Client</label>
            </div>

            <div id="businessFields" class="business-fields">
                <div class="form-floating mb-3">
                    <input asp-for="Input.CompanyName" class="form-control" placeholder="Company Name" />
                    <label asp-for="Input.CompanyName">Company Name</label>
                    <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.TaxNumber" class="form-control" placeholder="Tax Number" />
                    <label asp-for="Input.TaxNumber">Tax Number</label>
                    <span asp-validation-for="Input.TaxNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.BusinessAddress" class="form-control" placeholder="Business Address" />
                    <label asp-for="Input.BusinessAddress">Business Address</label>
                    <span asp-validation-for="Input.BusinessAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"
                       oninput="checkPasswordStrength(this.value)" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="password-strength">
                    Password strength: <span id="strength-text">Weak</span>
                    <div class="strength-meter">
                        <div class="strength-meter-fill" id="strength-meter"></div>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn-register">
                <i class="fas fa-user-plus"></i> Create Account
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Register.js">     
    </script>
}